            }, function replacer(key, value) { return value }),
            contentType: "application/json",
            dataType: 'json',
            success: function (result) {
                documentationStates.draft = result;
                if (onSuccess != null && onSuccess != undefined) {
                    onSuccess(result);
                }
            },
            error: function () {
                if (onError != null && onError != undefined) {
                    onError();
                }
            }
        });
    }

