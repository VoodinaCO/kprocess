    // Retrieve grid based on CSS class
    function getGrid(model) {
        switch (model.cssClass) {
            case "training":
                return $("#FormatTraining").ejGrid("instance");
                break;
            case "inspection":
                return $("#FormatInspection").ejGrid("instance");
                break;
