                            <Rectangle x:Name="InvalidVisualElement"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Stretch"
                                       IsHitTestVisible="False"
                                       Opacity="0"
                                       Stroke="{StaticResource ErrorBrush}"
                                       StrokeThickness="1" />
                            <Rectangle x:Name="RightGridLine"
