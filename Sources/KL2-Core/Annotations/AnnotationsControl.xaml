<Viewbox x:Class="AnnotationsLib.AnnotationsControl"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:app="clr-namespace:AnnotationsLib"
         mc:Ignorable="d" 
         d:DesignHeight="300" d:DesignWidth="300">
    <InkCanvas x:Name="annotationsContainer" Background="Transparent" EditingMode="None"
               DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=app:AnnotationsControl}}"
               Width="{Binding ContainerWidth}" Height="{Binding ContainerHeight}"/>
</Viewbox>
