    <DrawingGroup.ClipGeometry>
      <RectangleGeometry Rect="0,0,800,500" />
    </DrawingGroup.ClipGeometry>
    <GeometryDrawing Brush="#FF0099FF">
      <GeometryDrawing.Geometry>
        <RectangleGeometry RadiusX="0" RadiusY="0" Rect="0,0,800,500" />
      </GeometryDrawing.Geometry>
    </GeometryDrawing>
    <GeometryDrawing Brush="#FFFFFF00">
      <GeometryDrawing.Geometry>
        <EllipseGeometry RadiusX="150" RadiusY="150" Center="350,250" />
      </GeometryDrawing.Geometry>
    </GeometryDrawing>
  </DrawingGroup>
